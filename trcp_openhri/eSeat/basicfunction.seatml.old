<?xml version="1.0" encoding="UTF-8" ?>
<seatml>
  <general name="sample">
    <adaptor name="speechin" type="rtcin" datatype="TimedString" />
    <adaptor name="speechout" type="rtcout" datatype="TimedString" />
    <adaptor name="speechoutE" type="rtcout" datatype="TimedString" />
    <adaptor name="command" type="rtcout" datatype="TimedLong" />
    <adaptor name="qa" type="rtcout" datatype="TimedLong" />
  </general>
  <state name="OPEN">
   <onentry>
      <message sendto="speechout">ベーシックファンクショナリティータスクの音声対話を開始します。</message>
      <script sendto="speechout">
print "Open!!!"
      </script>
    </onentry>
    <rule>
      <key source="speechin">にほん の しゅと は どこですか</key>
      <message sendto="speechout">それは東京です</message>
      <message sendto="qa">1</message>
    </rule>
    <rule>
      <key source="speechin">ふらんす の しゅと は どこですか</key>
      <message sendto="speechout">それはパリです</message>
      <message sendto="qa">1</message>
    </rule>
    <rule>
      <key source="speechin">にほん で いちばんたかいやま は どこですか</key>
      <key source="speechin">にほん で いちばんたかいやま は どこ</key>
      <key source="speechin">にほん で いちばんたかいやま は なに</key>
      <message sendto="speechout">それは富士山です</message>
      <message sendto="qa">1</message>
    </rule>
    <rule>
      <key source="speechin">にほん で いちばんひろいみずうみ は どこですか</key>
      <message sendto="speechout">それは琵琶湖です</message>
      <message sendto="qa">1</message>
    </rule>
    <rule>
      <key source="speechin">にほん で いちばんながいかわ は どこですか</key>
      <key source="speechin">にほん で いちばんながいかわ は どこ</key>
      <key source="speechin">にほん で いちばんながいかわ は なに</key>
      <message sendto="speechout">それは信濃川です</message>
      <message sendto="qa">1</message>
    </rule>

    <rule>
      <key source="speechin">せかい で いちばんおおきなくに は どこですか</key>
      <key source="speechin">せかい で いちばんおおきなくに は どこ</key>
      <message sendto="speechout">それはロシアです</message>
      <message sendto="qa">1</message>
    </rule>

    <rule>
      <key source="speechin">ぽぱい の がーるふれんど は だれですか</key>
      <key source="speechin">ぽぱい の がーるふれんど は だれ</key>
      <message sendto="speechout">おりーぶおいるです</message>
      <message sendto="qa">1</message>
    </rule>

    <rule>
      <key source="speechin">にほん と ちゅうごく は どちらがおおきいですか</key>
      <key source="speechin">にほん と ちゅうごく は どちらがおおきい</key>
      <message sendto="speechout">大きいのはもちろん中国です</message>
      <message sendto="qa">1</message>
    </rule>

    <rule>
      <key source="speechin">せかい で いちばんおもいどうぶつ は なんですか</key>
      <key source="speechin">せかい で いちばんおもいどうぶつ は なに</key>
      <message sendto="speechout">それはゾウです</message>
      <message sendto="qa">1</message>
    </rule>

    <rule>
      <key source="speechin">うし の あし は なんぼんですか</key>
      <key source="speechin">うし の あし は なんぼん</key>
      <message sendto="speechout">よんほんです</message>
      <message sendto="qa">1</message>
    </rule>

    <rule> <!-- 雑音を無視するためのルール -->
      <key source="speechin">つ</key>
      <message sendto="NoiseDiscarding">input noise</message>
    </rule>
    <rule> <!-- 雑音を無視するためのルール -->
      <key source="speechin">た</key>
      <message sendto="NoiseDiscarding">input noise</message>
    </rule>

  </state>
  <state name="IDLE">
  </state>
</seatml>
